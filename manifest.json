{
  "manifest_version": 2,
  "name": "FileFlux",
  "version": "1.0",
  "description": "Download handler for FileFlux",
  "permissions": [
    "downloads",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent":  false
  },
  "applications": {
    "gecko": {
      "id": "download-handler@example.com",
      "strict_min_version": "57.0"
    }
  }
}